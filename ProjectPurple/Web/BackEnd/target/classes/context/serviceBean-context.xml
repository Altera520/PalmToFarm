<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	<!-- log -->
	<bean id="insertLogService" class="com.spring.smart_plant.log.command.InsertLogServiceImpl"/>
	<bean id="getLogService" class="com.spring.smart_plant.log.command.GetLogServiceImpl"/>
	
	<!-- device -->
	<bean id="deviceControlService" class="com.spring.smart_plant.device.command.DeviceControlServiceImpl"/>
	<bean id="addAPService" class="com.spring.smart_plant.device.command.AddAPServiceImpl"/>
	<bean id="urlConnectionService" class="com.spring.smart_plant.device.command.UrlConnectionServiceImpl"/>
	<bean id="addDeviceAutoService" class="com.spring.smart_plant.device.command.AddDeviceAutoServiceImpl"/>
	<bean id="confirmAPService" class="com.spring.smart_plant.device.command.ConfirmAPServiceImpl"/>
	<bean id="deleteApService" class="com.spring.smart_plant.device.command.DeleteApServiceImpl"/>
	<bean id="deleteDeviceService" class="com.spring.smart_plant.device.command.DeleteDeviceServiceImpl"/>
	<bean id="getDeviceService" class="com.spring.smart_plant.device.command.GetDeviceServiceImpl"/>
	
	<!-- user -->
	<bean id="getUserInfoService" class="com.spring.smart_plant.user.command.GetUserInfoServiceImpl"/>
	<bean id="joinService" class="com.spring.smart_plant.user.command.JoinServiceImpl"/>
	<bean id="joinSearchService" class="com.spring.smart_plant.user.command.JoinSearchServiceImpl"/>
	<bean id="signinService" class="com.spring.smart_plant.user.command.SigninServiceImpl"/>
	<bean id="signoutService" class="com.spring.smart_plant.user.command.SignoutServiceImpl"/>
	
	<!-- sensor -->
	<bean id="insertSensorService" class="com.spring.smart_plant.sensor.command.InsertSensorServiceImpl"/>
	<bean id="getSensorDataService" class="com.spring.smart_plant.sensor.command.GetSensorDataServiceImpl"/>
	
	<!-- mail -->
	<bean id="mailService" class="com.spring.smart_plant.mail.command.MailServiceImpl"/>
	<bean id="authCodeCheckService" class="com.spring.smart_plant.mail.command.AuthCodeCheckServiceImpl"/>
</beans>
